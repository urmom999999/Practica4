<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoría para agrupar los permisos -->
    <data noupdate="1">
        <record id="category_gestion_educativa" model="ir.module.category">
            <field name="name">Gestión Educativa</field>
            <field name="description">Permisos para la gestión educativa</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- Rol: Director -->
        <record id="role_director" model="res.groups">
            <field name="name">Director</field>
            <field name="category_id" ref="category_gestion_educativa"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Rol: Profesor -->
        <record id="role_profesor" model="res.groups">
            <field name="name">Profesor</field>
            <field name="category_id" ref="category_gestion_educativa"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>